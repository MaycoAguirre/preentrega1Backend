<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        socket.on('productUpdate', (products) => {
            const productList = document.getElementById('productList');
            productList.innerHTML = ''; // Limpiar la lista antes de actualizar

            products.forEach(product => {
                const li = document.createElement('li');
                li.textContent = `${product.title} - $${product.price}`;
                productList.appendChild(li);
            });
        });

        function addProduct() {
            const newProduct = {
                id: Math.floor(Math.random() * 1000), // Asignar un ID aleatorio
                title: document.getElementById('productTitle').value,
                price: document.getElementById('productPrice').value
            };
            socket.emit('addProduct', newProduct);
        }
    </script>
</head>
<body>
    <h1>{{title}}</h1>
    <ul id="productList">
        {{#each products}}
            <li>
                {{title}} - ${{price}}
            </li>
        {{else}}
            <li>No hay productos disponibles.</li>
        {{/each}}
    </ul>
    <input type="text" id="productTitle" placeholder="TÃ­tulo del producto">
    <input type="number" id="productPrice" placeholder="Precio del producto">
    <button onclick="addProduct()">Agregar Producto</button>
</body>
</html>
